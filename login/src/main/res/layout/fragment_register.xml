<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="144dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:src="@mipmap/mifeng" />


        <EditText
            android:id="@+id/register_login_et_phone"
            style="@style/LoginEditText"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="70dp"
            android:gravity="center_vertical"
            android:hint="手机号码"
            android:inputType="phone"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/register_login_et_code"
                style="@style/LoginEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="输入验证码"
                android:inputType="textPassword"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/register_login_tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="获取验证码"
                android:textColor="#999999"
                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/register_login_et_password"
            style="@style/LoginEditText"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:hint="输入密码"
            android:inputType="phone"
            android:textSize="14sp" />

        <Button
            android:id="@+id/register_login_btn_submit"
            android:layout_width="335dp"
            android:layout_height="44dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_sel_enabled"
            android:text="注 册"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>


</FrameLayout>