<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#1A8CFF">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="职位详情"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#999999"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="20dp">

                <TextView
                    android:id="@+id/work_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="佳世客来得及佛"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/work_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="发窘"
                    android:textColor="#FF553B"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/work_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/work_name"
                    android:text="个人  偶奇偶 囧囧"
                    android:textColor="#666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/work_release_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/work_reward"
                    android:text="8:00"
                    android:textColor="#666"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/work_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/work_tag"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="17dp"
                    android:background="#F5F5F5" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/work_line">

                    <View
                        android:id="@+id/work_img_location"
                        android:layout_width="11dp"
                        android:layout_height="16dp"
                        android:background="#985242" />

                    <TextView
                        android:id="@+id/work_tv_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/work_img_location"
                        android:text="市-区-街道"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/work_tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/work_img_location"
                        android:text="xxxxx大厦B333-111"
                        android:textColor="#aaaaaa"
                        android:textSize="11sp" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#489163" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">

                    <ImageView
                        android:id="@+id/work_avatar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:background="#50107F" />

                    <TextView
                        android:id="@+id/work_publisher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/work_avatar"
                        android:layout_toRightOf="@+id/work_avatar"
                        android:text="张二蛋"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/work_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/work_publisher"
                        android:layout_toRightOf="@+id/work_avatar"
                        android:text="招聘者 最近活跃"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#489163" />
